@using Entidades
@model E_Pelicula

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Confirmar</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>

    <div class="container">
        <h1 class="display-3">¿Estás seguro de eliminar @Model.nombre de la base?</h1>
        <form action="/Home/eliminar" method="post">
            <br />

            <input type="hidden" name="idPelicula" value="@Model.idPelicula" />

            <div class="input-group mb-3" style="width: 300px;">
                <span class="input-group-text" id="inputGroup-sizing-default">Nombre</span>
                <input value="@Model.nombre" name="nombre" type="text" class="form-control text-muted" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" readonly>
            </div>

            <div class="input-group mb-3" style="width: 300px;">
                <span class="input-group-text" id="inputGroup-sizing-default">Genero</span>
                <input value="@Model.genero" name="genero" type="text" class="form-control text-muted" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" readonly>
            </div>

            <div class="input-group mb-3" style="width: 400px;">
                <span class="input-group-text" id="inputGroup-sizing-default">Fecha de lanzamiento</span>
                <input name="fechaLanzamiento" value="@Model.fechaLanzamiento.ToString("yyyy-MM-ddTHH:mm")" type="datetime-local" class="form-control text-muted" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" readonly>
            </div>

            <a href="/Home/IrAtrasEliminar" class="btn btn-outline-primary">Cancelar</a>
            <input type="submit" name="eliminar" value="Eliminar" class="btn btn-outline-danger" />
        </form>
    </div>
</body>
</html>